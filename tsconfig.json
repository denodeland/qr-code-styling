{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "module": "es2022",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "typeRoots": [
            "src/types/worker-loader.d.ts",
            "node_modules/@types"
        ],
        "lib": [
            "webworker",
            "es6",
            "dom"
        ]
    },
    "include": ["./src/**/*"]
}
